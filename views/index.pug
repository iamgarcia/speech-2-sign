extends layout

block content
  .container.center-container.h-100
    .container
      if videoURL !== null
        .row#response-row
          .col
            .card#response-box
              .card-body.center-text
                  h2 hello
      .row#content-row
        .col
          .card#content-box
            if videoURL !== null
              video#video-box.card-img-top.embed-responsive.embed-responsive-16by9(autoplay='autoplay', controls, disablePictureInPicture, controlsList='nodownload')
                source(src=videoURL, type='video/mp4')
            .card-body
              .row
                .col-sm.d-flex.center-text
                  h5.text-secondary.text-center.center-log#voicePrompt Click the microphone icon and speak
                .col-sm.d-flex
                  form(action='/', method='POST', enctype='multipart/form-data')
                    input(type='hidden', name='audio-file')
                  button.btn.btn-link.center-voice#voiceButton
                    .circle-icon.d-flex
                      img.center-svg#voiceIcon(src='images/mic.svg')
  script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
  script(src='/javascripts/lib/WebAudioRecorder.min.js')
  script(src='/javascripts/script.js')